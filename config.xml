<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mirage.mirageDT" version="2.6.0" 
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Mirage DT</name>
  <icon src="src/assets/logo.png" />
  <description>
        Mirage, l'application qui simplifie la vie des joueurs DT sur Android
  </description>
  <author email="you.wish@but.no.com" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">
        Mirage
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />

  <preference name="Fullscreen" value="true" />

  <access origin="*" />

  <allow-navigation href="*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
